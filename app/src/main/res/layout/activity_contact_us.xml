<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_login"
    tools:context=".ui.activities.ContactUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_in_contact_us_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/back_ground_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_menu_in_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="5dp"
                android:src="@drawable/baseline_menu_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/whiteLow"
                app:layout_constraintEnd_toStartOf="@+id/gl_end_in_change_pass"
                app:layout_constraintStart_toEndOf="@+id/gl_start_in_change_pass"
                app:layout_constraintTop_toTopOf="@+id/iv_menu_in_activity_main"
                app:layout_constraintBottom_toBottomOf="@+id/iv_menu_in_activity_main"
                android:text="تماس با ما"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back_press_in_contact_us_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_menu_in_activity_main"
                app:layout_constraintBottom_toBottomOf="@+id/iv_menu_in_activity_main"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start_in_change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end_in_change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/iv_logo_top_in_contact_us_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/logolight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_in_contact_us_activity"/>


    <TextView
        android:id="@+id/txt_top_in_change_pass_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_top_login"
        android:textColor="@color/whiteLow"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_top_in_contact_us_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_address_in_contact_us_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/whiteLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="تهران‌ سعادت آباد سرو غربی بعد از میدان شهرداری خیابان صدف ساختمان اداری جامعه (پلاک ۲۱) طبقه اول واحد ۱۳"
        app:layout_constraintTop_toBottomOf="@+id/txt_top_in_change_pass_activity"/>

    <TextView
        android:id="@+id/txt_support_in_contact_us_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/whiteLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="right"
        android:text="تلفن پشتیبانی: ۲۲۰۸۱۰۱۶-۰۲۱"
        app:layout_constraintTop_toBottomOf="@+id/txt_address_in_contact_us_activity"/>

    <TextView
        android:id="@+id/txt_post_code_in_contact_us_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/whiteLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="right"
        android:text="کدپستی:۱۹۹۸۷۶۷۵۴۵"
        app:layout_constraintTop_toBottomOf="@+id/txt_support_in_contact_us_activity"/>

    <TextView
        android:id="@+id/txt_telegram_address_in_contact_us_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/whiteLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="right"
        android:text="تلگرام: ۰۹۰۳۱۳۹۲۵۱۳"
        app:layout_constraintTop_toBottomOf="@+id/txt_post_code_in_contact_us_activity"/>


    <TextView
        android:id="@+id/txt_email_address_in_contact_us_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/whiteLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="right"
        android:text="پست الکترونیک: info@koja.co"
        app:layout_constraintTop_toBottomOf="@+id/txt_telegram_address_in_contact_us_activity"/>
</androidx.constraintlayout.widget.ConstraintLayout>