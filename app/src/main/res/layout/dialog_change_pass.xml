<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_top_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تغییر کلمه عبور"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_description_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:textSize="16sp"
        android:text="به دلیل مسایل امنیتی کلمه عبور را تغییر دهید"
        app:layout_constraintTop_toBottomOf="@+id/txt_top_in_dialog_change_pass"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_current_pass_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کلمه عبور فعلی"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_description_in_dialog_change_pass"/>

    <EditText
        android:id="@+id/et_current_pass_in_dialog_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:padding="5dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:maxLength="40"
        android:inputType="textPassword"
        android:background="@drawable/background_edit_text_change_pass"
        app:layout_constraintTop_toBottomOf="@+id/txt_current_pass_in_dialog_change_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@+id/et_current_pass_in_dialog_change_pass"
        app:layout_constraintBottom_toBottomOf="@+id/et_current_pass_in_dialog_change_pass"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_show_current_pass_in_dialog_change_pass"
            android:src="@drawable/baseline_remove_red_eye_24"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txt_new_pass_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:text="کلمه عبور جدید"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_current_pass_in_dialog_change_pass"/>

    <EditText
        android:id="@+id/et_new_pass_in_dialog_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:padding="5dp"
        android:paddingStart="35dp"
        android:maxLength="40"
        android:paddingEnd="35dp"
        android:inputType="textPassword"
        android:background="@drawable/background_edit_text_change_pass"
        app:layout_constraintTop_toBottomOf="@+id/txt_new_pass_in_dialog_change_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@+id/et_new_pass_in_dialog_change_pass"
        app:layout_constraintBottom_toBottomOf="@+id/et_new_pass_in_dialog_change_pass"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_show_new_pass_in_dialog_change_pass"
            android:src="@drawable/baseline_remove_red_eye_24"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txt_confirm_pass_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:text="تکرار کلمه عبور جدید"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_pass_in_dialog_change_pass"/>


    <EditText
        android:id="@+id/et_confirm_pass_in_dialog_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:maxLength="40"
        android:padding="5dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:inputType="textPassword"
        android:background="@drawable/background_edit_text_change_pass"
        app:layout_constraintTop_toBottomOf="@+id/txt_confirm_pass_in_dialog_change_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@+id/et_confirm_pass_in_dialog_change_pass"
        app:layout_constraintBottom_toBottomOf="@+id/et_confirm_pass_in_dialog_change_pass"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_show_confirm_pass_in_dialog_change_pass"
            android:src="@drawable/baseline_remove_red_eye_24"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_pass_in_dialog_change_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="تغییر کلمه عبور"
        android:backgroundTint="@color/purple_700"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_pass_in_dialog_change_pass"
        app:layout_constraintEnd_toStartOf="@+id/gl_end_in_dialog_change_pass"
        app:layout_constraintStart_toEndOf="@+id/gl_start_in_dialog_change_pass"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_in_dialog_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.77"/>

</androidx.constraintlayout.widget.ConstraintLayout>