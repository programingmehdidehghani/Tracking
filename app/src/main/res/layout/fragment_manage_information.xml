<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.InformationManagementFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_pass_in_dashboard_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تغییر کلمه عبور"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_email_in_dashboard_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تغییر ایمیل"
        android:layout_margin="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_pass_in_dashboard_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_phone_number_in_dashboard_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تغییر شماره موبایل"
        android:layout_margin="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_email_in_dashboard_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>